{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Trigger auto build - main branch",
      "type": "shell",
      "command": "curl -X POST \"https://us-central1-fhir-org-starter-project.cloudfunctions.net/ig-commit-trigger\" -H \"Content-type: application/json\" --data '{\"ref\": \"refs/heads/main\", \"repository\": {\"full_name\": \"AuDigitalHealth/adha-template-base\"}}'"
    },
    {
      "label": "Run IG Publisher to build this template",
      "type": "shell",
      "command": "java -jar publisher.jar -ig .",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
